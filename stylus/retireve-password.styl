body,html
    height 100%
    width 100%
    margin 0
    padding 0
.wrap
    height 100%
    width 100%
    min-width 1440px
    min-height 900px
    background url('../img/background_img.png') no-repeat
    background-size 100% 100%
    padding-top 125px
    box-sizing border-box
    position relative
    .content
        margin 0 auto
        width 1200px
        .head
            width 900px
            margin 0 auto 17px
            display flex
            justify-content space-between
            align-items center
            span
                font-size 14px
                color rgba(0,0,0,0.43)
                line-height 20px
                a
                    text-decoration none
                    color #5184EE
        .retireve-wrap
            width 900px
            height 400px
            margin 0 auto
            box-sizing border-box
            box-shadow 0px 32px 40px -2px rgba(6,22,73,0.12),0px 0px 1px 0px rgba(6,22,73,0.06)
            margin-bottom 135px
            background #fff
            border-radius 6px
            .title
                p
                    text-align center
                    line-height 32px
                    font-size 24px
                    color #fff
                    padding 13px 0
                    background #5184EE
                    border-radius 6px 6px 0px 0px
            .retireve-box
                padding 60px 144px 0
                .step-list
                    li
                        display inline-block
                        margin-right 70px
                        font-size 14px
                        color #464C5B
                        position relative
                        span
                            display inline-block
                            width 32px
                            height 32px
                            border-radius 50%
                            border 1px solid #D7DDE4
                            text-align center
                            line-height 32px
                        &:after
                            content ''
                            display block
                            width 60px
                            height 1px
                            background #E3E8EE
                            position absolute
                            right -68px
                            top 50%
                            transform translateY(-50%)
                        &:last-child
                            margin-right 0
                        &:last-child::after
                            content none
                    .active span
                        background #5184EE
                        color #fff
                form
                    width 312px
                    margin 60px auto 0
                    .form-item
                        margin-bottom 20px
                        position relative
                        .input-box
                            display flex
                            justify-content space-between
                            align-items center
                            padding-left 15px
                            padding-right 12px
                            border 1px solid #D7DDE4
                            border-radius 2px
                            height 42px
                            img
                                width 20px
                                height 20px
                            input
                                height 100%
                                border 0
                                outline none
                                text-indent 13px
                                padding 0
                                flex 1
                        .submit-btn
                            width 100%
                            border-radius 2px
                            background #5184EE
                            height 42px
                            outline none
                            border 0
                            font-size 16px
                            color #fff
                            font-weight 500
                            cursor pointer
                        .error-text
                            font-size 12px
                            color #F04138
                            line-height 17px
                            position absolute
                            bottom -17px
                        .rule-box
                            position absolute
                            top 0
                            right -240px
                            display flex
                            justify-content space-between
                            img
                                margin-left 10px
                            .rule-text
                                width 210px
                                font-size 12px
                                color #9EA7B4
                                line-height 17px
                .step-content
                    margin 75px auto 0
                    p
                        font-size 14px
                        color #464C5B
                        a
                            color #5184EE
        .footer
            position absolute
            bottom 0
            left 50%
            transform translateX(-50%)
            p
                width 1200px
                padding 20px 0
                text-align center
                font-size 14px
                color #C3CBD6
                border-top 1px solid #D7DDE4