body,html
    height 100%
    width 100%
    margin 0
    padding 0
.wrap
    height 100%
    width 100%
    min-width 1440px
    min-height 900px
    padding-top 125px
    box-sizing border-box
    position relative
    .content
        margin 0 auto
        width 1200px
        .head
            width 900px
            margin 0 auto 17px
            display flex
            justify-content space-between
            align-items center
            span
                font-size 14px
                color rgba(0,0,0,0.43)
                line-height 20px
                a
                    text-decoration none
                    color #5184EE
        .op-wrap
            width 900px
            margin 0 auto
            box-sizing border-box
            box-shadow 0px 32px 40px -2px rgba(6,22,73,0.12),0px 0px 1px 0px rgba(6,22,73,0.06)
            margin-bottom 135px
            background #fff
            border-radius 6px
            border 1px solid transparent
            .title
                p
                    text-align center
                    line-height 32px
                    font-size 24px
                    color #fff
                    padding 13px 0
                    background #5184EE
                    border-radius 6px 6px 0px 0px
            .op-box
                text-align center
                .op-text
                    font-size 14px
                    color #464C5B
                    margin-top 96px
                .submit-btn
                    margin-top 30px
                    width 120px
                    border-radius 2px
                    background #5184EE
                    height 42px
                    outline none
                    border 0
                    font-size 16px
                    color #fff
                    font-weight 500
                    cursor pointer
                    margin-bottom 150px
                .associated-title
                    font-size 18px
                    font-weight 500
                    color #000
                    text-align center
                    line-height 25px
                    margin-top 70px
                    img
                        vertical-align middle
                .user-head
                    margin-top 35px
                    display flex
                    flex-direction column
                    align-items center
                    margin-bottom 18px
                    img
                        width 60px
                        height 60px
                        margin-bottom 5px
                    .user-name
                        font-size 16px
                        color #000
                        font-weight 500
                        line-height 22px
                    .user-tip
                        color #657180
                        font-size 14px
                        font-weight 500
                        margin-top 10px
                .submint-btn,.other-btn
                    width 312px
                    border-radius 2px
                    height 42px
                    outline none
                    border 0
                    font-size 16px
                    font-weight 500
                    cursor pointer
                    display block
                    margin 0 auto
                .submint-btn
                    background #5184EE
                    color #fff
                    margin-top 30px
                .other-btn
                    border 1px solid #D7DDE4
                    background #fff
                    color #9EA7B4
                    margin-top 12px
                    margin-bottom 47px
            form
                width 312px
                margin 70px auto
                .associated-title
                    font-size 18px
                    font-weight 500
                    color #000
                    text-align center
                    line-height 25px
                    margin-bottom 23px
                .form-item
                        margin-bottom 15px
                        .input-box
                            display flex
                            justify-content space-between
                            align-items center
                            padding-right 12px
                            border 1px solid #D7DDE4
                            border-radius 2px
                            height 42px
                            input
                                height 100%
                                border 0
                                outline none
                                text-indent 13px
                                padding 0
                                flex 1
                        .yzm
                            border 1px solid #D7DDE4
                            border-radius 2px
                            width 200px
                            height 42px
                            outline none
                            text-indent 13px
                            padding 0
                            box-sizing border-box
                            vertical-align middle
                        .yzm-pic
                            width 100px
                            height 42px
                            border 1px solid #D7DDE4
                            border-radius 2px
                            vertical-align middle
                        .login-btn
                            width 100%
                            border-radius 2px
                            background #5184EE
                            height 42px
                            outline none
                            border 0
                            font-size 16px
                            color #fff
                            font-weight 500
                            cursor pointer
                    .op
                        display flex
                        justify-content space-between
                        label
                            cursor pointer
                            font-size 14px
                            color rgba(0,0,0,0.65)
                            line-height 22px
                            display flex
                            align-items center
                            user-select none
                        a
                            color #5184EE
                            text-decoration none
                            font-size 14px
                            line-height 20px
        .footer
            position absolute
            bottom 0
            left 50%
            transform translateX(-50%)
            p
                width 1200px
                padding 20px 0
                text-align center
                font-size 14px
                color #C3CBD6
                border-top 1px solid #D7DDE4